{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2015",
    "outDir": "lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    ".",
    "src",
    "tests"
  ]
}