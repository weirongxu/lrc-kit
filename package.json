{
  "name": "lrc-kit",
  "version": "1.2.0",
  "description": "lrc parser, maker, runner",
  "main": "lib/cjs/lrc-kit.js",
  "module": "lib/esm/lrc-kit.js",
  "keywords": [
    "lrc",
    "lyric"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.build.json",
    "build:cjs": "tsc -p tsconfig.cjs.build.json",
    "clean": "rm -rf lib",
    "test:types": "tsc -p tsconfig.test.json",
    "test:lint": "eslint src --ext .ts",
    "test:jest": "jest",
    "test": "npm run test:types && npm run test:lint && npm run test:jest"
  },
  "files": [
    "lib",
    "src"
  ],
  "author": "Weirong Xu <weirongxu.raidou@gmail.com>",
  "homepage": "https://github.com/weirongxu/lrc-kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/weirongxu/lrc-kit.git"
  },
  "bugs": "https://github.com/weirongxu/lrc-kit/issues",
  "license": "MIT",
  "devDependencies": {
    "@raidou/eslint-config-base": "^3.1.3",
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
